@{
    ViewData["Title"] = "Home page";
}

@section Styles {
    <link href="@Url.Content("~/css/Index.css")" rel="stylesheet">
}

@section Scripts {
    <script src="@Url.Content("~/js/Index.js")" type="module" async></script>
}

<div id="index-container">
    <div id="welcome-container">
        <div id="preview">
        </div>
        <div id="welcome">
            <h1>Welcome to our website!</h1>
            <p>This is the place to share your photos with others, or to find the perfect picture you need for your presentation.</p>
            <p>Pick some filters and we will provide a wide range of non-copyright photos.</p>
            <p>If you would like to know us, visit our <a href="/AboutUs">About Us</a> page to find out who we are.</p>
            <p>If you have any questions, please let us know, we are always happy to help!</p>
        </div>
    </div>
    <aside id="picture-description">
        <!-- er staat "In order to support file uploads, HTML forms must specify an encoding type (enctype) of multipart/form-data."
        van https://docs.microsoft.com/en-us/aspnet/core/mvc/models/file-uploads?view=aspnetcore-6.0 -->
        <form action="Home/SubmitImage" method="post" enctype="multipart/form-data">
            <fieldset>
                <legend>Upload Your Image</legend>
                <div>
                    <div>
                        <label for="img-file">Image File</label>
                        <input id="img-file" name="imgFile" type="file" required>
                    </div>
                    <div>
                        <label for="img-title">Image Title</label>
                        <input id="img-title" name="imgTitle" type="text" maxlength="25">
                    </div>
                    <div>
                        <label for="img-description">Description</label>
                        <textarea id="img-description" name="imgDescription" rows="5" cols="20" maxlength="250"></textarea>
                    </div>
                </div>
                <hr>
                <input value="Submit" type="submit">
            </fieldset>
        </form>
    </aside>
</div>
